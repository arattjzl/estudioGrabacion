<Window x:Class="estudioGrabacion.Beat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:estudioGrabacion"
        mc:Ignorable="d"
        Title="Beat" WindowState="Maximized"
        Visibility="Visible">
    <DockPanel>
        <Menu DockPanel.Dock="Left" VerticalAlignment="Top" Height="100" Background="AliceBlue" Margin="10,20,10,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button Content="Inicio" x:Name="inicio" Background="Aquamarine" Grid.Row="0" Margin="2,3,3,3" Padding="1,1,1,1" FontSize="10" Click="inicio_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="3">
                                <ContentPresenter Content="Inicio" HorizontalAlignment="Center" Height="14" ></ContentPresenter>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="beat" Background="Aquamarine" Grid.Row="1" Margin="2,3,3,3" Padding="1,1,1,1" FontSize="10" BorderBrush="Black">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="3">
                                <ContentPresenter Content="Beat" HorizontalAlignment="Center" Height="14"></ContentPresenter>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="estudio" Background="Aquamarine" Grid.Row="2" Margin="2,3,3,3" Padding="1,1,1,1" FontSize="10" Click="estudio_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="3">
                                <ContentPresenter Content="Estudio" HorizontalAlignment="Center" Height="14"></ContentPresenter>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="cuenta" Background="Aquamarine" Grid.Row="3" Margin="2,3,3,3" Padding="1,1,1,1" Click="cuenta_Click" FontSize="10">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="3">
                                <ContentPresenter Content="Cuenta" HorizontalAlignment="Center" Height="14"></ContentPresenter>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Menu>
        <Border Background="Gray" Margin="0,0,0,720">
            <Label Content="Estudio grabacion" HorizontalAlignment="Center" Margin="0,20,0,20" />
        </Border>
    </DockPanel>
</Window>
